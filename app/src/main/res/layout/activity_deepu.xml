<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/cof3">#6d4c41>

    <RelativeLayout
        android:id="@+id/activity_deepu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="agrawal.deepansh.coffebydeepu.deepu"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Enter your Name:"
            android:textSize="25sp"
            android:textColor="@android:color/holo_red_dark" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="22dp"
            android:textColor="@android:color/background_dark"
            android:id="@+id/name"
            android:textSize="16sp"/>
        <TextView
            android:layout_marginTop="16dp"
            android:layout_below="@id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quantity"
            android:id="@+id/q"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="25sp"/>
        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_below="@id/q"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:id="@+id/ll">
            <Button
                android:text="-"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="25dp"
                android:onClick="dec"
                android:layout_width="45dp"
                android:layout_height="45dp" />
            <TextView
                android:text="2"
                android:textAlignment="center"
                android:textSize="25sp"
                android:id="@+id/quan"
                android:textColor="@android:color/holo_red_dark"
                android:layout_width="60dp"
                android:layout_height="45dp" />
            <Button
                android:text="+"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="25dp"
                android:onClick="inc"
                android:layout_width="45dp"
                android:layout_height="45dp" />
        </LinearLayout>
        <TextView
            android:layout_below="@id/ll"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Topping"
            android:id="@+id/t"
            android:textColor="@android:color/black"
            android:textSize="25sp"/>
        <CheckBox
            android:layout_marginTop="16dp"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Choclate"
            android:textStyle="italic"
            android:textSize="25sp"
            android:id="@+id/c"
            android:textColor="@android:color/holo_red_dark"
            android:layout_below="@id/t"/>
        <CheckBox

            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Vanilla"
            android:textAlignment="center"
            android:textStyle="italic"
            android:textSize="25sp"
            android:id="@+id/v"
            android:textColor="@android:color/holo_red_dark"
            android:layout_below="@id/c"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price"
            android:layout_marginTop="16dp"
            android:id="@+id/p"
            android:layout_below="@id/v"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="25sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:id="@+id/ll1"
            android:layout_below="@id/p"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:layout_below="@id/p"
                android:layout_marginLeft="0dp"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:onClick="order"
                android:id="@+id/total"
                android:text="Total"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="22sp"></Button>

            <TextView
                android:id="@+id/price"
                android:layout_width="260dp"
                android:
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@android:color/holo_red_dark"
                android:text="$ 0"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                />


        </LinearLayout>

        <Button
            android:layout_marginTop="16dp"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="ORDER"
            android:id="@+id/eml"
            android:textSize="25sp"
            android:textColor="@android:color/holo_red_dark"
            android:layout_below="@id/ll1" />

        <Button
            android:text="Intent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/c"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="38dp"
            android:onClick="in"
            android:id="@+id/intent" />


    </RelativeLayout>

    </ScrollView>
